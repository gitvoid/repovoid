<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="project-04EJB"
		transaction-type="JTA">
		<jta-data-source>pgdbPool</jta-data-source>
		<class>model.TQuestion</class>
		<class>model.TQuestionnaire</class>
		<class>model.TReponse</class>
		<class>model.TScore</class>
		<class>model.TUser</class>
		<properties>
			<property name="eclipselink.ddl-generation" value="create-tables"/>
		</properties>
	</persistence-unit>
</persistence>
